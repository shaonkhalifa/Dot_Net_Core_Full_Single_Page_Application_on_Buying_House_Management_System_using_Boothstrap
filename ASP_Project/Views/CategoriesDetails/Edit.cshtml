@model ASP_Project.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit</h1>

<h4 class="text-center">Category</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form id="CategoriesEditForm" asp-action="Edit" enctype="multipart/form-data">
          
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label mt-2"></label>
                <input asp-for="CategoryName" class="form-control mt-2" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Update" data-category="CRUD" id="btnCategoryEditFormSubmit" data-href="@Url.Action("Edit","CategoriesDetails")" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>



