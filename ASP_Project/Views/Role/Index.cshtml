
@{
    ViewData["Title"] = "Index";
}

<h1 class="alert alert-info text-center">Role Management</h1>
<div class="row">
    <h2 class="text-primary text-center">@ViewBag.msg</h2>
</div>
<div class="row">
    <div class="col-6">
        <form asp-action="CreateRole" asp-controller="Role" method="post">
            <div>
                <label class="col-form-label">Role Name</label>
                <input type="text" name="userrole" value="" class="form-control" placeholder="Please type role name" />
            </div>
            <div class="d-flex align-items-center mt-2">
                <button type="submit" class="btn btn-primary btn-sm">Add Role</button>
            </div>
            
           
        </form>
    </div>
</div>